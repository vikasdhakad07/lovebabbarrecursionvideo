Method 2:Sum of array


public class Main
{
	public static void main(String[] args) {
	    int arr[]={45,23,78,90,12};
	    int size=arr.length;
	    
		System.out.println(getSum(arr,size-1));
	}
	
	public static int getSum(int arr[],int size){
	    if(size==0)
	    return 0;
	    if(size==1)
	    return arr[0];
	    
	    return arr[0]+getSum(arr,size-1);
	}
	
}
