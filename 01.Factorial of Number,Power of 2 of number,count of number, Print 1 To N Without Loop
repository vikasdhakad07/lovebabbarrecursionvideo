Method 1:Factorial of a Number:

import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    int n=sc.nextInt();
		System.out.println(factorial(n));
	}
	
	static int factorial(int n){
	    if(n==0){
	        return 1;
	    }
	    else{
	        return n*factorial(n-1);
	    }
	}
}

